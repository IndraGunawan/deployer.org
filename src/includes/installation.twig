{% if type is defined and type == 'composer' %}
{% set code = '
composer require deployer/deployer
' %}
{% else %}
{% set code = '
curl -O https://deployer.org/deployer.phar
mv deployer.phar /usr/local/bin/dep
chmod +x /usr/local/bin/dep
' %}
{% endif %}
{% spaceless %}
    <pre>
        <code class="language-bash">{{ code|trim }}</code>
    </pre>
{% endspaceless %}
