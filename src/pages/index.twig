    <h1>
        {#<img src="/images/deployer.svg" alt="Deployer">#}
        Deployer &mdash; Deployment tool for PHP
    </h1>

    <div class="terminal">
        <i class="x"></i>
        <i class="minus"></i>
        <i class="plus"></i>
        <div class="log">Press enter to submit commands.</div>
        <form>
            <label for="input">&gt;</label>
            <input id="input" type="text" value="" tabindex="1" autocomplete="off">
        </form>
    </div>

    <script async type="text/javascript" src="//cdn.carbonads.com/carbon.js?zoneid=1673&serve=C6AILKT&placement=deployerorg" id="_carbonads_js"></script>
{% endblock %}

{% block section %}
